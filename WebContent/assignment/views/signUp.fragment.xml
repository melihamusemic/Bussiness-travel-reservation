<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog id="signUpDialog" title="{i18n>signUpTitle}" contentWidth="20%">
		<content>
			<Input placeholder="{i18n>firstName}" id="firstName"/>
			<Input placeholder="{i18n>lastName}" id="lastName"/>
			<Input placeholder="{i18n>email}" id="signUpEmail"/>
			<Input placeholder="{i18n>password}" id="signUpPass"/>
			<Input placeholder="{i18n>repeatPass}" id="repeatPass"/>
		</content>
		<beginButton>
			<Button text="{i18n>submit}" press=".onSubmit"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>cancel}" press=".onCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>